<% @users.each do |user| %>
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header">
          <h3><%= link_to user.username, user %></h3>
        </div>
        <div class="card-body">
          <div class="card-text">
            <p><%= pluralize(user.articles.count, "articles") %></p>
            <%= link_to "View", user, class: "btn btn-outline-success" %>
            <% if logged_in? and user == current_user || current_user.admin? %>
              <%= link_to "Edit", edit_user_path(user), class: "btn btn-outline-info" %>
            <% end %>
            <% if current_user.admin? %>
              <%= link_to "Delete user", user_path(user), class: "btn btn-outline-danger", method: :delete, 
                data: {confirm: "Are you sure you want to delete the account and all articles?" } %>
            <% end %>
          </div>
        </div>
        <div class="card-footer text-muted">
        </div>
      </div>
    </div>
  </div>
<% end %>
