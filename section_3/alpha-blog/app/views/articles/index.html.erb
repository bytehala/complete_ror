<h1>Articles Index</h1>

<p>Num articles <%= @articles.length %></p>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.id %></td>
                <td><%= article.title %></td>
                <td><%= article.description %></td>
                <td><%= link_to 'Show', article_path(article) %></td>
                <td><%= link_to 'Delete', article_path(article), method: :delete %></td> <!-- rails knows that you want to pass the id by saying (article) -->
            </tr>
        <% end %>
    </tbody>
</table>