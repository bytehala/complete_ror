<h1>Articles Index</h1>

<p>Num articles <%= @articles.length %></p>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3">Action</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.id %></td>
                <td><%= article.title %></td>
                <td><%= article.description %></td>
                <td><%= link_to 'Show', article_path(article) %></td>
                <td><%= link_to 'Edit', edit_article_path(article) %></td>
                <td><%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure"} %></td> <!-- rails knows that you want to pass the id by saying (article) -->
            </tr>
        <% end %>
    </tbody>
</table>
<!-- since the path says new_article -->
<p>
    <%= link_to 'Create new article', new_article_path %> |
    <%= link_to 'Home', root_path %>
</p>